{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build: core",
      "type": "shell",
      "command": "npm run build:core",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "watch: extension",
      "type": "shell",
      "command": "npm run watch",
      "options": {
        "cwd": "${workspaceFolder}/vscode"
      },
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "dev: extension",
      "dependsOn": ["build: core", "watch: extension"],
      "dependsOrder": "sequence"
    }
  ]
}
